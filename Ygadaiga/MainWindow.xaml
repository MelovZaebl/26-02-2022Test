<Window x:Class="Ygadaiga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ygadaiga"
        mc:Ignorable="d"
        Title="Ygadaika" Height="450" Width="200">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="100" TextAlignment="Center" TextWrapping="Wrap" Text="Введите число от 1 до 100"/>
            <TextBox Name="TBox" Width="100" Height="21" KeyUp="Changed" PreviewTextInput="Input"/>
        </StackPanel>
        <ListBox Height="200" Name="LB"/>
        <Button Margin="10" Height="25" Content="Еще раз?" Click="AgainBtn"/>
    </StackPanel>
</Window>
